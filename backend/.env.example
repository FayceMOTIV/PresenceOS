# PresenceOS Backend — Environment Variables
# Copy this file to .env and fill in your values

# === App ===
APP_NAME=PresenceOS
APP_ENV=development
DEBUG=true
SECRET_KEY=your-secret-key-change-in-production

# === Database ===
DATABASE_URL=postgresql+asyncpg://presenceos:presenceos@postgres:5432/presenceos
DATABASE_URL_SYNC=postgresql://presenceos:presenceos@postgres:5432/presenceos

# === Redis ===
REDIS_URL=redis://redis:6379

# === Celery ===
CELERY_BROKER_URL=redis://redis:6379/0
CELERY_RESULT_BACKEND=redis://redis:6379/0

# === Storage (MinIO/S3) ===
S3_ENDPOINT_URL=http://minio:9000
S3_ACCESS_KEY=minioadmin
S3_SECRET_KEY=minioadmin
S3_BUCKET_NAME=presenceos

# === AI Providers ===
OPENAI_API_KEY=
ANTHROPIC_API_KEY=
AI_PROVIDER=openai
OPENROUTER_API_KEY=

# === Sentry — Error Monitoring ===
# Get from https://sentry.io → Project Settings → Client Keys (DSN)
SENTRY_DSN=

# === hCaptcha — Anti-bot ===
# Get from https://hcaptcha.com → Sites → Secret Key
HCAPTCHA_SECRET=

# === Upload-Post API (Instagram, Facebook, TikTok) ===
# Get from https://upload-post.com → Dashboard → API Keys
UPLOAD_POST_API_KEY=

# === AI Agents ===
FIRECRAWL_API_KEY=
COMPOSIO_API_KEY=
SERPER_API_KEY=
CREW_DEFAULT_LLM=openai/gpt-4o-mini
CREW_MAX_RPM=10
CREW_VERBOSE=false

# === WhatsApp (optional) ===
WHATSAPP_TOKEN=
WHATSAPP_PHONE_NUMBER_ID=
WHATSAPP_BUSINESS_ACCOUNT_ID=
WHATSAPP_VERIFY_TOKEN=
WHATSAPP_API_VERSION=v21.0
WHATSAPP_WEBHOOK_SECRET=

# === Telegram (optional) ===
TELEGRAM_BOT_TOKEN=
TELEGRAM_WEBHOOK_SECRET=

# === Google Business Profile (Community Manager) ===
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
CM_AUTO_PUBLISH_THRESHOLD=0.85

# === fal.ai (FLUX Kontext image enhancement) ===
FAL_KEY=
FAL_WEBHOOK_URL=

# === Security ===
TOKEN_ENCRYPTION_KEY=
