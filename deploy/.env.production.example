# PresenceOS â€” Production Environment Variables
# Copy to backend/.env.production and fill in real values

# Application
APP_ENV=production
DEBUG=false
SECRET_KEY=change-me-to-a-strong-random-string
FRONTEND_URL=https://presenceos.com

# Database
DATABASE_URL=postgresql+asyncpg://presenceos:STRONG_PASSWORD@localhost:5432/presenceos
DATABASE_URL_SYNC=postgresql://presenceos:STRONG_PASSWORD@localhost:5432/presenceos

# Redis
REDIS_URL=redis://localhost:6379/0
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/2

# Storage (S3)
S3_ENDPOINT_URL=https://s3.amazonaws.com
S3_ACCESS_KEY=your-aws-access-key
S3_SECRET_KEY=your-aws-secret-key
S3_BUCKET_NAME=presenceos-media
S3_REGION=eu-west-3
S3_PUBLIC_URL=https://presenceos-media.s3.eu-west-3.amazonaws.com

# AI Providers
OPENAI_API_KEY=sk-...
OPENAI_MODEL=gpt-4o
ANTHROPIC_API_KEY=sk-ant-...
AI_PROVIDER=openai

# OAuth - Meta (Facebook/Instagram)
META_APP_ID=
META_APP_SECRET=
META_REDIRECT_URI=https://presenceos.com/api/v1/connectors/oauth/callback

# OAuth - TikTok
TIKTOK_CLIENT_KEY=
TIKTOK_CLIENT_SECRET=
TIKTOK_REDIRECT_URI=https://presenceos.com/api/v1/connectors/oauth/callback

# Upload-Post API
UPLOAD_POST_API_KEY=

# OAuth - LinkedIn
LINKEDIN_CLIENT_ID=
LINKEDIN_CLIENT_SECRET=
LINKEDIN_REDIRECT_URI=https://presenceos.com/api/v1/connectors/oauth/callback

# Encryption
TOKEN_ENCRYPTION_KEY=change-me-to-fernet-key

# AI Agents
FIRECRAWL_API_KEY=
COMPOSIO_API_KEY=
SERPER_API_KEY=
CREW_DEFAULT_LLM=gpt-4o-mini

# WhatsApp Cloud API
WHATSAPP_TOKEN=
WHATSAPP_PHONE_NUMBER_ID=
WHATSAPP_BUSINESS_ACCOUNT_ID=
WHATSAPP_VERIFY_TOKEN=presenceos-webhook-verify
WHATSAPP_WEBHOOK_SECRET=

# Video Pipeline
PEXELS_API_KEY=
MUSIC_LIBRARY_PATH=/opt/presenceos/data/music
VIDEO_OUTPUT_PATH=/tmp/presenceos_videos
VIDEO_MAX_DURATION=60

# Observability
SENTRY_DSN=
LOG_LEVEL=WARNING
