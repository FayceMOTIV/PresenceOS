# PresenceOS - Environment Configuration
# Copy to .env and fill in your values:  cp .env.example .env

# ╔══════════════════════════════════════════════════════╗
# ║  APPLICATION                                         ║
# ╚══════════════════════════════════════════════════════╝
APP_NAME=PresenceOS
APP_ENV=development              # development | staging | production
DEBUG=true
SECRET_KEY=change-me-to-a-random-string-min-32-chars
API_V1_PREFIX=/api/v1
FRONTEND_URL=http://localhost:3001

# ╔══════════════════════════════════════════════════════╗
# ║  DOCKER PORTS                                        ║
# ╚══════════════════════════════════════════════════════╝
BACKEND_PORT=8000
FRONTEND_PORT=3001
POSTGRES_PORT=5432
REDIS_PORT=6379
MINIO_API_PORT=9000
MINIO_CONSOLE_PORT=9001

# ╔══════════════════════════════════════════════════════╗
# ║  DATABASE (PostgreSQL + pgvector)                    ║
# ╚══════════════════════════════════════════════════════╝
POSTGRES_USER=presenceos
POSTGRES_PASSWORD=presenceos
POSTGRES_DB=presenceos
# These are built by docker-compose from the above vars:
DATABASE_URL=postgresql+asyncpg://presenceos:presenceos@postgres:5432/presenceos
DATABASE_URL_SYNC=postgresql://presenceos:presenceos@postgres:5432/presenceos

# ╔══════════════════════════════════════════════════════╗
# ║  REDIS                                               ║
# ╚══════════════════════════════════════════════════════╝
REDIS_URL=redis://redis:6379/0
CELERY_BROKER_URL=redis://redis:6379/1
CELERY_RESULT_BACKEND=redis://redis:6379/2

# ╔══════════════════════════════════════════════════════╗
# ║  STORAGE (S3 / MinIO)                               ║
# ╚══════════════════════════════════════════════════════╝
S3_ENDPOINT_URL=http://minio:9000
S3_ACCESS_KEY=minioadmin
S3_SECRET_KEY=minioadmin
S3_BUCKET_NAME=presenceos-media
S3_REGION=us-east-1
S3_PUBLIC_URL=http://localhost:9000/presenceos-media

# ╔══════════════════════════════════════════════════════╗
# ║  AI PROVIDERS                                        ║
# ╚══════════════════════════════════════════════════════╝
AI_PROVIDER=openai               # openai | anthropic

# OpenAI
OPENAI_API_KEY=sk-your-openai-key
OPENAI_MODEL=gpt-4-turbo-preview
OPENAI_EMBEDDING_MODEL=text-embedding-3-small

# Anthropic (optional fallback)
ANTHROPIC_API_KEY=sk-ant-your-anthropic-key
ANTHROPIC_MODEL=claude-sonnet-4-5-20250929

# ╔══════════════════════════════════════════════════════╗
# ║  OAUTH - META (Instagram / Facebook)                 ║
# ╚══════════════════════════════════════════════════════╝
META_APP_ID=your-meta-app-id
META_APP_SECRET=your-meta-app-secret
META_REDIRECT_URI=http://localhost:3001/api/auth/callback/meta
META_GRAPH_VERSION=v19.0

# ╔══════════════════════════════════════════════════════╗
# ║  OAUTH - TIKTOK                                      ║
# ╚══════════════════════════════════════════════════════╝
TIKTOK_CLIENT_KEY=your-tiktok-client-key
TIKTOK_CLIENT_SECRET=your-tiktok-client-secret
TIKTOK_REDIRECT_URI=http://localhost:3001/api/auth/callback/tiktok

# ╔══════════════════════════════════════════════════════╗
# ║  OAUTH - LINKEDIN                                    ║
# ╚══════════════════════════════════════════════════════╝
LINKEDIN_CLIENT_ID=your-linkedin-client-id
LINKEDIN_CLIENT_SECRET=your-linkedin-client-secret
LINKEDIN_REDIRECT_URI=http://localhost:3001/api/auth/callback/linkedin

# ╔══════════════════════════════════════════════════════╗
# ║  UPLOAD-POST API                                     ║
# ╚══════════════════════════════════════════════════════╝
UPLOAD_POST_API_KEY=

# ╔══════════════════════════════════════════════════════╗
# ║  FRONTEND (Next.js)                                  ║
# ╚══════════════════════════════════════════════════════╝
NEXT_PUBLIC_API_URL=http://localhost:8000
NEXT_PUBLIC_APP_URL=http://localhost:3001
NEXTAUTH_URL=http://localhost:3001
NEXTAUTH_SECRET=your-nextauth-secret-min-32-chars

# ╔══════════════════════════════════════════════════════╗
# ║  ENCRYPTION                                          ║
# ╚══════════════════════════════════════════════════════╝
TOKEN_ENCRYPTION_KEY=your-32-byte-encryption-key-here

# ╔══════════════════════════════════════════════════════╗
# ║  AI AGENTS (CrewAI)                                  ║
# ╚══════════════════════════════════════════════════════╝
FIRECRAWL_API_KEY=
COMPOSIO_API_KEY=
SERPER_API_KEY=
CREW_DEFAULT_LLM=gpt-4o-mini
CREW_MAX_RPM=10
CREW_VERBOSE=true

# ╔══════════════════════════════════════════════════════╗
# ║  WHATSAPP CLOUD API                                  ║
# ╚══════════════════════════════════════════════════════╝
WHATSAPP_TOKEN=
WHATSAPP_PHONE_NUMBER_ID=
WHATSAPP_BUSINESS_ACCOUNT_ID=
WHATSAPP_VERIFY_TOKEN=presenceos-webhook-verify
WHATSAPP_API_VERSION=v21.0
WHATSAPP_WEBHOOK_SECRET=

# ╔══════════════════════════════════════════════════════╗
# ║  TELEGRAM BOT                                        ║
# ╚══════════════════════════════════════════════════════╝
TELEGRAM_BOT_TOKEN=
TELEGRAM_WEBHOOK_SECRET=

# ╔══════════════════════════════════════════════════════╗
# ║  VIDEO PIPELINE                                      ║
# ╚══════════════════════════════════════════════════════╝
PEXELS_API_KEY=
OPENAI_TTS_VOICE=nova
OPENAI_TTS_MODEL=tts-1
MUSIC_LIBRARY_PATH=/data/music
FFMPEG_PATH=ffmpeg
VIDEO_OUTPUT_PATH=/tmp/presenceos_videos
VIDEO_MAX_DURATION=60

# ╔══════════════════════════════════════════════════════╗
# ║  CONVERSATION ENGINE                                 ║
# ╚══════════════════════════════════════════════════════╝
CONVERSATION_TTL_SECONDS=1800

# ╔══════════════════════════════════════════════════════╗
# ║  OBSERVABILITY                                       ║
# ╚══════════════════════════════════════════════════════╝
SENTRY_DSN=
LOG_LEVEL=INFO
